@model ProyectoAspNet.Models.Proyecto

@{
    ViewBag.Title = "CrearProyecto";
}

<h2 class="display-3 text-center">Crear Proyecto</h2>

<center>
    @using (Html.BeginForm("CrearProyectoDB", "Home"))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <h4>Titulo</h4>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control", @required = "required", @maxLength = "100" } })
                    @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <h4>Texto</h4>
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.texto, new { @cols = "auto", @required = "required" })
                    @Html.ValidationMessageFor(model => model.texto, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Crear" class="btn btn-dark w-100" />
                </div>
            </div>
        </div>
    }
    @ViewBag.mensaje
</center>
<div>
    <h6> @Html.ActionLink("Volver", "InternoDB")</h6>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script>
    var titulo = document.querySelector("input[name='nombre']");
    titulo.style.maxWidth = window.innerWidth + "px";
    titulo.autocomplete = "off";
    var texto = document.querySelector("#texto");
    texto.style.maxWidth = window.innerWidth + "px";
    texto.style.width = "100%";
    texto.style.maxWidth = window.innerWidth + "px";
    texto.classList = "form-control";
    texto.style.resize = "none";
    window.addEventListener("resize", cambioTamañoPantalla);
    function cambioTamañoPantalla() {
        document.querySelector("#texto").style.height = (innerHeight - 530) + "px";
    }
    cambioTamañoPantalla();
</script>