@{
    ViewBag.Title = "Acceso";
}

@model ProyectoAspNet.Models.Usuario

@{
    ViewBag.Title = "Acceso";
}
<h2 class="display-3 text-center mb-4">Empresa</h2>

<center>
    @using (Html.BeginForm("Interno", "Home", FormMethod.Post))
    {
        @Html.AntiForgeryToken()



    <div class="form-horizontal active">
        
        <hr />
        <h4 class="mb-3">Control de acceso</h4>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">

            <div class="col-md-10">
                @Html.EditorFor(model => model.usuario, new { htmlAttributes = new { @class = "form-control", @placeholder = "Usuario", @required = "required" } })
                @Html.ValidationMessageFor(model => model.usuario, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.contraseña, new { htmlAttributes = new { @class = "form-control", @placeholder = "Contraseña", @required = "required", type = "password" } })
                @Html.ValidationMessageFor(model => model.contraseña, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Acceder" class="btn btn-success w-100" />
            </div>
        </div>
        <h4 class="text-danger">@ViewBag.error</h4>
    </div>


    }

</center>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

