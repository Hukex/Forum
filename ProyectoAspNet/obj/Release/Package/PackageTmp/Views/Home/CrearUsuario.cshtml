@model ProyectoAspNet.Models.Usuario

@{
    ViewBag.Title = "CrearUsuario";
}

<h2 class="display-3 text-center mb-4">Crear Usuario</h2>
<center>
    @{ if (ViewBag.color == "1")
        {
            <h5 class="text-success">@ViewBag.error</h5>}

        else
        {
            <h5 class="text-danger">@ViewBag.error</h5>} }
    <hr />
    @using (Html.BeginForm("CrearUsuarioDB", "Home", FormMethod.Post, new { @class = "p-3" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">


            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.usuario, new { htmlAttributes = new { @class = "form-control", @placeholder = "Usuario", @required = "required", @maxLength = "30" } })
                    @Html.ValidationMessageFor(model => model.usuario, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.contraseña, new { htmlAttributes = new { @class = "form-control", @placeholder = "Contraseña", @required = "required", type = "password", @maxLength = "30" } })
                    @Html.ValidationMessageFor(model => model.contraseña, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Crear" class="btn btn-primary w-100" />
                </div>
            </div>

        </div>
    }
</center>
