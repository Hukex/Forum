@model ProyectoAspNet.Models.Proyecto

@{
    ViewBag.Title = "EditarProyecto";
}

<h2 class=" text-center display-4">Editar Proyecto</h2>
<center>
    @using (Html.BeginForm("EditarProyectoDB/" + @Model.id, "Home"))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <h4>Titulo</h4>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control", @required = "required", @maxLength = "100" } })
                    @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <h4>Texto</h4>
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.texto, new { @cols = "auto", @required = "required" })
                    @Html.ValidationMessageFor(model => model.texto, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Guardar Cambios" class="btn btn-dark w-100" />
                    <h6 class="volver text-primary text-left">Volver</h6>
                </div>
            </div>
        </div>
    }
    @ViewBag.mensaje
</center>


<script>
    var titulo = document.querySelector("input[name='nombre']");
    titulo.style.maxWidth = window.innerWidth + "px";
    titulo.autocomplete = "off";
    var texto = document.querySelector("#texto");
    texto.style.maxWidth = window.innerWidth + "px";
    texto.style.width = "100%";
    texto.style.maxWidth = window.innerWidth + "px";
    texto.classList = "form-control";
    texto.style.resize = "none";
    window.addEventListener("resize", cambioTamañoPantalla);
    function cambioTamañoPantalla() {
        document.querySelector("#texto").style.height = (innerHeight - 490) + "px";
    }
    var volver = document.querySelector(".volver");

    volver.addEventListener("click", () => {

        window.history.back();
    })
    volver.addEventListener("mouseover", () => {
        volver.style.cursor = "pointer";
        volver.style.textDecoration = "underline";
    })
    volver.addEventListener("mouseout", () => {
        volver.style.textDecoration = "none";
    })
    cambioTamañoPantalla();
</script>